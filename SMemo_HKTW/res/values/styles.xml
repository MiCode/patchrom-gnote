<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="top_bar_layout_btn_style">
        <item name="android:background">#00000000</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="tutorial_body_title">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_3</item>
        <item name="android:gravity">top</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="tutorial_body_text">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/color_29</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginBottom">7.0dip</item>
    </style>
    <style name="tutorial_dialog_text">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/color_1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginBottom">7.0dip</item>
    </style>
    <style name="tutorial_text">
        <item name="android:textSize">@dimen/font_size_38</item>
        <item name="android:textColor">@color/tutorial_title_color</item>
        <item name="android:gravity">top</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginBottom">4.0dip</item>
    </style>
    <style name="tutorial_content_text">
        <item name="android:textSize">@dimen/font_size_38</item>
        <item name="android:textColor">@color/tutorial_content_color</item>
        <item name="android:gravity">top</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginBottom">4.0dip</item>
    </style>
    <style name="tutorial_text.header" parent="@style/tutorial_text">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/tutorial_title_color</item>
        <item name="android:layout_height">29.0dip</item>
        <item name="android:layout_marginBottom">0.0dip</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="tutorial_text.header2" parent="@style/tutorial_text">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/tutorial_title_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">30.0dip</item>
        <item name="android:layout_marginBottom">0.0dip</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="tutorial_text.header3" parent="@style/tutorial_text">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffa75f0d</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">30.0dip</item>
        <item name="android:layout_marginBottom">0.0dip</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="MyNoTitleBar" parent="@android:style/Theme.DeviceDefault">
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="MyTranslucent" parent="@android:style/Theme.DeviceDefault">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
    <style name="MyTranslucentNoTitleBar" parent="@android:style/Theme.DeviceDefault">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
</resources>
